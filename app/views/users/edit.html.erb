<h2>Update Profile</h2>

<%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :province_id, 'Province' %><br>
    <%= f.collection_select :province_id, @provinces, :id, :name, selected: @user.province_id %>
  </div>

  <div class="actions">
    <%= f.submit 'Update' %>
  </div>
<% end %>
