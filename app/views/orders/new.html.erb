<h2>Checkout</h2>

<%= form_with url: orders_path, method: :post, local: true do |f| %>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
  <%= f.label :province_id, "Province" %><br>
  <%= f.collection_select :province_id, @provinces, :id, :name,
        { prompt: false, selected: @provinces.find { |p| p.name == "Manitoba" }&.id },
        { required: true } %>
</div>

  <div class="actions">
    <%= f.submit "Place Order" %>
  </div>
<% end %>
